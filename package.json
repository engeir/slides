{
    "scripts": {
        "start": "reveal-md content/ -w --theme theme/mytheme.css --highlight-theme gruvbox-dark --disable-auto-open --listing-template theme/my-site.html",
        "build": "rm -rf docs && reveal-md content --static docs --static-dirs=content/attachments --theme theme/mytheme.css --highlight-theme gruvbox-dark --listing-template theme/my-site.html && mv docs/_assets docs/assets && find docs/*html | xargs sed -i.bak \"s/\\/_assets/\\.\\/assets/g\" && rm docs/*html.bak",
        "preexport:topdf": "cp $npm_config_file 2print.md && replace-in-file '/class=\"fragment\"/g' ' ' 2print.md --isRegex",
        "export:topdf": "reveal-md 2print.md --theme theme/mytheme.css --print presentation.pdf",
        "postexport:topdf": "rm 2print.md",
        "postinstall": "patch-package"
    },
    "dependencies": {
        "replace-in-file": "^6.3.2",
        "reveal-md": "^5.3.2",
        "reveal.js-copycode": "^1.0.3",
        "reveal.js-simplemenu": "^1.0.9",
        "revealjs-animated": "^1.0.0"
    },
    "devDependencies": {
        "cz-conventional-changelog": "^3.3.0",
        "patch-package": "^6.4.7"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
